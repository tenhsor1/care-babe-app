<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ultimas Notificaciones"
            android:id="@+id/lastNotificationsTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:background="#ff0e3964"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lastNotificationsTextView"
            android:layout_centerHorizontal="true"
            android:paddingBottom="15dp"
            android:id="@+id/lastNotificationsLayout"
            android:background="#ffffffff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/firstNotificationDateTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/firstNotificationView"
                android:layout_toRightOf="@+id/firstNotificationDateTextView"
                android:layout_alignBaseline="@+id/firstNotificationDateTextView"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/secondNotificationDateTextView"
                android:layout_below="@+id/firstNotificationDateTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/secondNotificationView"
                android:layout_toRightOf="@+id/secondNotificationDateTextView"
                android:layout_alignBaseline="@+id/secondNotificationDateTextView"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/thirdNotificationDateTextView"
                android:layout_below="@+id/secondNotificationDateTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/thirdNotificationView"
                android:layout_toRightOf="@+id/thirdNotificationDateTextView"
                android:layout_alignBaseline="@+id/thirdNotificationDateTextView"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                />


        </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#24dbff25"
            android:layout_weight="0.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Acciones"
            android:id="@+id/actionsTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:background="#ff0e3964"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightImage"
            android:layout_below="@+id/actionsTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_light_icon" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightSwitch"
            android:layout_alignTop="@+id/lightImage"
            android:layout_centerHorizontal="true"
            android:checked="false" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundImage"
            android:layout_below="@+id/lightImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_speaker_icon" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundSwitch"
            android:layout_alignTop="@+id/soundImage"
            android:layout_centerHorizontal="true"
            android:checked="false" />

    </RelativeLayout>

</LinearLayout>